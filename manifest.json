{
  "manifest_version": 3,
  "name": "ExtensionHub",
  "version": "2.1.0",
  "description": "Price comparison, YouTube focus mode, and page summarizer â€” all in one.",

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background/background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.ca/*",
        "*://*.amazon.com/*",
        "*://*.walmart.ca/*",
        "*://*.bestbuy.ca/*",
        "*://*.realcanadiansuperstore.ca/*",
        "*://*.superstore.ca/*"
      ],
      "js": ["content/shopping-content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["content/lockingtube-content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["content/summarize-content.js"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/16I.png",
      "32": "icons/32I.png",
      "48": "icons/icon.png",
      "128": "icons/128.png"
    }
  },

  "icons": {
    "16": "icons/16I.png",
    "32": "icons/32I.png",
    "48": "icons/icon.png",
    "128": "icons/128.png"
  }
}