{
  "manifest_version": 3,
  "name": "LockInTube",
  "version": "1.0",
  "description": "Filter YouTube recommendations by topics.",
  "permissions": ["storage"],
  "host_permissions": ["https://*.youtube.com/*"],
  "icons": {
      "16": "icons/LockInTube16.png",
      "32": "icons/LockInTube32.png",
      "48": "icons/LockInTube48.png",
      "128": "icons/LockInTube128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/LockInTube16.png",
      "32": "icons/LockInTube32.png",
      "48": "icons/LockInTube48.png",
      "128": "icons/LockInTube128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}