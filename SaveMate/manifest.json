{
  "manifest_version": 3,
  "name": "SaveMate",
  "version": "1.1",
  "description": "Compares prices across Amazon, Walmart, Best Buy, and Superstore.",

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.ca/*",
        "*://*.amazon.com/*",
        "*://*.walmart.ca/*",
        "*://*.bestbuy.ca/*",
        "*://*.realcanadiansuperstore.ca/*",
        "*://*.superstore.ca/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "icons/icon.png"
    }
  },

  "icons": {
    "48": "icons/icon.png"
  }
}
